<div class="h-full">
  <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <%= image_tag("logo.png", alt: "Company Logo", class: "mx-auto h-20 w-auto") %>
      <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign in to your account</h2>
    </div>
    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
      <%= form_with url: signing_index_path, method: :post, class: "space-y-6" do |form| %>
          <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <%= form.label :first_name, "First Name", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2 shadow-sm">
                <%= form.text_field :first_name, placeholder: "Enter First Name", class: "block w-full rounded-md border-0 py-1.5 pl-7 pr-5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-color-600 sm:text-sm sm:leading-6" %>            
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= form.label :last_name, "Last Name", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2 shadow-sm">
                <%= form.text_field :last_name, placeholder: "Enter Last Name", class: "block w-full rounded-md border-0 py-1.5 pl-7 pr-5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-color-600 sm:text-sm sm:leading-6" %>            
              </div>
            </div>
          </div>

        <div>
          <%= form.label :email, "Email", id: "em_tag", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2 shadow-sm">
            <%= form.text_field :email, type: 'email', placeholder: "Enter your personal email", class: "block w-full rounded-md border-0 py-1.5 pl-7 pr-20 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-color-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
          <div class="sm:col-span-3">
            <%= form.label :organization, "Organization name", class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= form.text_field :organization, type: 'text', placeholder: "Enter your organization name", class: "block w-full rounded-md border-0 py-1.5 pl-7 pr-5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-color-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <span><%= form.label :organization_email, "Email identifier", class: "block text-sm font-medium leading-6 text-gray-900" %> </span>
            <div class="mt-2">
              <%= form.text_field :organization_email, type: 'text', placeholder: "Enter your organization Email", class: "block w-full rounded-md border-0 py-1.5 pl-7 pr-5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-color-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>
        </div>

        <div>
          <%= form.label :password, "Password", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="relative mt-2 rounded-md shadow-sm">
            <%= form.text_field :password, type: 'password', placeholder: "Enter your password", class: "block w-full rounded-md border-0 py-1.5 pl-7 pr-20 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-color-600 sm:text-sm sm:leading-6" %>
            <div  id="password_view">
              <i class="fa-regular fa-eye absolute inset-y-0 right-0 flex items-center mr-2 mb-auto mt-auto text-gray-500"></i>
            </div>
          </div>
        </div>

        <div>
          <%= form.label :confirm_password, "Confirm Password", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="relative mt-2 rounded-md shadow-sm">
              <%= form.text_field :confirm_password, type: 'password', placeholder: "Re-enter your password", class: "block w-full rounded-md border-0 py-1.5 pl-7 pr-20 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-color-600 sm:text-sm sm:leading-6" %>
              <div id="confirm_password_view">
                <i class="fa-regular fa-eye absolute inset-y-0 right-0 flex items-center mr-2 mb-auto mt-auto text-gray-500"></i>
              </div>
            </div>
        </div>

        <div>
          <%= form.submit "Sign in", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-color-600 hover:bg-primary-color-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
    
  </div>
</div>

<%= javascript_import_module_tag "signing_new" %>